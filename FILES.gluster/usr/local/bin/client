#!/bin/sh
#
# Usage: ./client
#

HOST="192.168.100.89"
VOLNAME="ndslabs"
DEST="/var/glfs/$VOLNAME"

# Start the gluster daemon
/usr/sbin/glusterd

# Create the directory if it does not already exist
echo mkdir -p $DEST
mkdir -p $DEST

# Mount the NDS Labs Gluster volume on the host
# This will make the volume available to be mapped into K8
echo mount -t glusterfs $HOST:/$VOLNAME $DEST
mount -t glusterfs $HOST:/$VOLNAME $DEST

echo GlusterFS client started

sleep infinity
