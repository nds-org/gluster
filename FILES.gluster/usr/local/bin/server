#!/bin/bash
. /etc/glconfig/glfs-config-global
[ $DEBUG ] && set -x
echo $$ > /glrunning
touch /var/log/glusterfs/glustershd.log
/usr/sbin/glusterd --log-file=/dev/stdout
sleep 5 # let cluster come up
echo $$ > /glready
tail -f /var/log/glusterfs/glustershd.log
echo "gluster server exiting, stop-server"
stop-server

